<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Registration Form Application</display-name>
    
    <!-- Form Servlet Configuration -->
    <servlet>
        <servlet-name>RegisterFormServlet</servlet-name>
        <servlet-class>com.example.RegisterFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterFormServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <!-- Process Form Servlet Configuration -->
    <servlet>
        <servlet-name>ProcessFormServlet</servlet-name>
        <servlet-class>com.example.ProcessFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessFormServlet</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>